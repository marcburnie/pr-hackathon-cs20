{
    "name": "EZTrack",
    "version": "0.1",
    "description": "Track your packages with ease with EZTrack!",
    "permissions": ["declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2,
    "page_action": {
        "default_popup": "popup.html",        
        "default_icon": {
            "16": "./assets/box16.png",
            "48": "./assets/box48.png",                   
            "128": "./assets/box128.png"        
        }
    },    
    "icons": {   
        "16": "./assets/box16.png",
        "48": "./assets/box48.png",         
        "128": "./assets/box128.png"    
    }
}